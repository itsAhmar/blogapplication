<div class="col-md-3">
  <%= form_with model: [ @post, @comment ], class: "my-form", data: { turbo_frame: "comments-section" } do |form| %>
    <% if @comment.errors.any? %>
      <div class="text-danger">
        <ul>
          <% @comment.errors.full_messages.each do |error| %>
            <ul><%= error %></ul>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group mb-3">
      <%= form.text_area :content, class: "form-control", placeholder: "Write your comment here..." %>
    </div>
    <div class="form-group">
      <%= form.hidden_field :parent_id, value: @comment.parent_id%>
      <%= form.submit "Submit", class: "btn bg-info rounded-pill w-30" %>
    </div>
  <% end %>
</div>
