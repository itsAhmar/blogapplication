<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: post, class: "custom-form", data: { turbo_frame: 'posts_section' }) do |form| %>
        <% if @post.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Oops! Something went wrong...</h4>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        
        <% if post.image.attached? %>
          <div class="mb-3">
            <%= image_tag post.image, class: "img-thumbnail rounded" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="form-actions text-center my-3">
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.submit post.new_record? ? "Create" : "Update", class: "btn bg-info rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
