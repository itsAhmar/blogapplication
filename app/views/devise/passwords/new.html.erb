<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary mt-3" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-link" %><br>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
